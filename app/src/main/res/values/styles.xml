<resources>
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 自製Theme繼承原生Theme -->
    <style name="MyMaterialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>-->
    </style>

    <!-- 實際套用的Theme，繼承MyMaterialTheme -->
    <style name="MyMaterialTheme.Base" parent="MyMaterialTheme">
        <item name="windowNoTitle">true</item>
        <!-- 不需要 ActionBar 了,因為改用Toolbar -->
        <item name="windowActionBar">false</item>
        <!-- 主要顏色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 狀態欄背景色 -->
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
        <!-- 其他可用項目 colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal -->
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>   <!-- Whether bars should rotate or not during transition -->
        <item name="color">@android:color/white</item>
    </style>

    <!-- dialog_add_accounting_item.xml -->
    <!-- 新增品項DialogFragment所用的EditText的Color Style-->
    <style name="EditTextAccountingItem">
        <item name="android:textColorHint">@color/text_accounting_item</item>   <!-- Hint Color-->
        <item name="android:backgroundTint">@color/secondary_text</item>    <!-- Bottom Line Color-->
        <item name="android:textColor">@color/text_accounting_item</item>
    </style>
    <!-- 新增品項DialogFragment所用的Button的Color Style -->
    <style name="ButtonCostType">
        <item name="android:layout_marginRight">-10dp</item>
        <item name="android:backgroundTint">@color/color_background_accounting_item</item>
        <item name="android:textColor">@color/text_accounting_item</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ButtonIncomeType">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:backgroundTint">@color/color_background_accounting_item</item>
        <item name="android:textColor">@color/text_accounting_item</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 個人管理主畫面-->
    <!-- 選項Button-->
    <style name="ButtonPersonals">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@drawable/btn_personals</item>
    </style>

    <!-- FloatingButton 適用於RelativeLayout的佈局-->
    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <!-- 小組目標標題 -->
    <style name="TextTarget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="TargetCardTextColor">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <!-- 分隔線 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- 信箱與密碼欄位間分隔線 -->
    <style name="EmailPwdDivider">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 表格欄之間的分隔線 -->
    <style name="ColumnDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- 表格列之間的分隔線 -->
    <style name="RowDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- 表格列之間的分隔線 -->
    <style name="TableContentText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- 系統文字訊息 -->
    <style name="TextMessage">
        <item name="android:textColor">@color/md_red_700</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- 帳號密碼欄位的樣式 -->
    <style name="EditTextLogin">
        <item name="android:textColor">@color/primary_text</item>
        <!--<item name="android:layout_height">2dp</item>-->
    </style>

    <!-- 帳號或密碼錯誤時的文字訊息 -->
    <style name="TextActPwdMessage">
        <item name="android:textColor">@color/md_red_700</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="CardAccountingItem" >
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/color_background</item>
        <item name="contentPaddingTop">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
