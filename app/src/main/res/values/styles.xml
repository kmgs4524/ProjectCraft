<resources>
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 自製Theme繼承原生Theme -->
    <style name="MyMaterialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>-->
    </style>

    <!-- 實際套用的Theme，繼承MyMaterialTheme -->
    <style name="MyMaterialTheme.Base" parent="MyMaterialTheme">
        <item name="windowNoTitle">true</item>
        <!-- 不需要 ActionBar 了,因為改用Toolbar -->
        <item name="windowActionBar">false</item>
        <!-- 主要顏色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 狀態欄背景色 -->
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
        <!-- 其他可用項目 colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal -->
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>   <!-- Whether bars should rotate or not during transition -->
        <item name="color">@android:color/white</item>
    </style>

    <!-- 小組目標標題 -->
    <style name="TextTarget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <!-- 分隔線 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- 信箱與密碼欄位間分隔線 -->
    <style name="EmailPwdDivider">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 表格欄之間的分隔線 -->
    <style name="ColumnDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- 表格列之間的分隔線 -->
    <style name="RowDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- 表格列之間的分隔線 -->
    <style name="TableContentText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- 系統文字訊息 -->
    <style name="TextMessage">
        <item name="android:textColor">@color/md_red_700</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- 帳號密碼欄位的樣式 -->
    <style name="EditTextLogin">
        <item name="android:textColor">@color/primary_text</item>
        <!--<item name="android:layout_height">2dp</item>-->
    </style>

    <!-- 帳號或密碼錯誤時的文字訊息 -->
    <style name="TextActPwdMessage">
        <item name="android:textColor">@color/md_red_700</item>
        <item name="android:layout_height">2dp</item>
    </style>

</resources>
