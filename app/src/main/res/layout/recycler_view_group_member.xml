<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_group_member"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:src="@drawable/blank_profile_picture"/>
    <TextView
        android:id="@+id/txt_item_group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_group_member"
        android:textColor="@color/icons"
        android:text="姓名"/>

    <TextView
        android:id="@+id/txt_group_member_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_group_member"
        android:layout_below="@+id/txt_item_group_member_name"
        android:text="信箱"/>

    <TextView
        android:id="@+id/txt_group_member_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_personals"
        android:padding="4dp"
        android:textColor="@color/color_primary"
        android:text="組長"
        android:visibility="invisible"/>

</RelativeLayout>