<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.york.teamcraft.personalsfragment.view.PersonalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_img_personals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_person_white_48dp"/>

        <TextView
            android:id="@+id/txt_personal_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚未登入"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:background="#3D3939">

        <android.support.v4.widget.Space
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_personal_tasks"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="個人任務"
            style="@style/ButtonPersonals" />

        <ImageView
            android:id="@+id/img_sign_out"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_exit_to_app_white_48dp"/>

        <Button
            android:id="@+id/btn_account_management"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="帳戶資料"
            style="@style/ButtonPersonals" />

        <android.support.v4.widget.Space
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
