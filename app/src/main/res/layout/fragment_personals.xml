<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.york.teamcraft.personalsfragment.view.PersonalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_img_personals"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/txt_personal_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kmgs4524@gmail.com"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_personal_mission"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:src="@drawable/personal_mission"/>

        <ImageView
            android:id="@+id/img_account_management"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:src="@drawable/manage_account"/>
    </LinearLayout>

</LinearLayout>
