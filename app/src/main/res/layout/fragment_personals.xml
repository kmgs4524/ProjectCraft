<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.york.teamcraft.personalsfragment.view.PersonalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_personal_data"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_edit_white_24dp" />

            <ImageView
                android:id="@+id/img_sign_in"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/ic_exit_to_app_white_24dp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_img_personals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_person_white_48dp" />

        <TextView
            android:id="@+id/txt_personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用者"
            android:textColor="@color/color_primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_personal_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚未登入" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_personal_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的隊伍"
                android:textColor="@color/icons" />

            <TextView
                android:id="@+id/txt_personal_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="小組"
                android:textColor="@color/icons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TEAM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GROUP" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txt_undo_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="num"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@color/md_black_1000" />

        <TextView
            android:id="@+id/txt_done_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="num"
            android:textColor="@color/icons"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UNDO" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="18dp"
            android:background="@color/md_black_1000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DONE" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_personal_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>