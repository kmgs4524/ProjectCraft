<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_card_item_grouptask_name"
                        style="@style/TextTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="標題" />

                    <android.support.v4.widget.Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_card_item_grouptask_responsible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="負責人："/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/profile"/>


                    <TextView
                        android:id="@+id/txt_card_item_grouptask_respn_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_card_item_grouptask_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="內容" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_card_item_grouptask_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9/4" />

                    <TextView
                        android:id="@+id/txt_card_item_grouptask_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3:00" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>