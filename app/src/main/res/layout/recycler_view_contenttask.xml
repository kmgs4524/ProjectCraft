<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkbox_personal_contenttask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox_personal_contenttask"
        android:gravity="center"
        android:textSize="24sp"
        android:text="活動安排" />

    <TextView
        android:id="@+id/txt_personal_contenttask_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/spacer_personal_contenttask"
        android:gravity="center"
        android:textSize="24sp"
        android:text="9/4" />

    <android.support.v4.widget.Space
        android:id="@+id/spacer_personal_contenttask"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_personal_contenttask_time"/>

    <TextView
        android:id="@+id/txt_personal_contenttask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="24sp"
        android:text="12:30" />

</RelativeLayout>