<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.york.teamcraft.schedulefragment.ScheduleFragment">

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_weight="0.1"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:stretchColumns="1, 3, 5, 7">

            <View style="@style/RowDivider" />

            <TableRow>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                    <View style="@style/ColumnDivider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_col_group_name"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:text="組別" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                    <View style="@style/ColumnDivider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_col_group_task"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:text="工作" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                    <View style="@style/ColumnDivider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_col_responsible"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:text="負責人" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                    <View style="@style/ColumnDivider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_col_time"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:text="時間" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                    <View style="@style/ColumnDivider" />
                </LinearLayout>

            </TableRow>

            <View style="@style/RowDivider" />
        </TableLayout>

        <android.support.v4.widget.Space
            android:layout_weight="0.1"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
