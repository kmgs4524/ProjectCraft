<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_grouptask_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.york.teamcraft.targetfragment.view.TargetFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_rounded_coner"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="工作內容" />

            <Button
                android:id="@+id/btn_confirm_content_task"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@color/md_orange_200"
                android:layout_toLeftOf="@+id/space_left_of_btn_delete"
                android:text="確認"/>

            <android.support.v4.widget.Space
                android:id="@+id/space_left_of_btn_delete"
                android:layout_toLeftOf="@+id/btn_delete_content_task"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_delete_content_task"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/img_btn_square"
                android:text="刪除" />

        </RelativeLayout>

        <include
            layout="@layout/cardview_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
