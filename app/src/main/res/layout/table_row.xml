<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0, 2, 4, 6">

    <view style="@style/Divider" />

    <TableRow>

        <TextView
            android:id="@+id/txt_col_group_name"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="組別" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent">

            <View style="@style/ColumnDivider" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_col_group_task"
            android:gravity="center"
            android:text="工作" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent">

            <View style="@style/ColumnDivider" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_col_responsible"
            android:gravity="center"
            android:text="負責人" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent">

            <View style="@style/ColumnDivider" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_col_time"
            android:gravity="center"
            android:text="時間" />

    </TableRow>

</TableLayout>