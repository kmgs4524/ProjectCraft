<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.york.teamcraft.addcontenttak.AddContentTaskActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_add_content_task_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="標題" />

    <EditText
        android:id="@+id/edt_add_content_task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="內容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_add_content_task_date"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_date_range_white_24dp"/>

        <TextView
            android:id="@+id/txt_add_content_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="選擇日期"/>

    </LinearLayout>

</LinearLayout>
